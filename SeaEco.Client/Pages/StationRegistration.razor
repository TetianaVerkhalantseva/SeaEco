    private async Task LoadSurveyData()
    {
        try
        {
            _survey = await Http.GetFromJsonAsync<SurveyDto>($"api/Project/{ProjectId:guid}/station/{StationId:guid}/survey/{SurveyId:guid}");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }

